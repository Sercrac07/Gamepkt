---
import '@fontsource/poppins';
import '@fontsource/sixtyfour';
import Footer from '#c/Footer.astro';
import Header from '#c/Header.astro';

interface Props {
  description?: string;
  title: string;
}

const { title, description } = Astro.props;

const DEFAULT_DESCRIPTION = 'Game.pkt es un juego basado en la aplicación de simulación de redes "Packet Tracer"';
---

<!doctype html>
<html lang='es'>
  <head>
    <meta charset='UTF-8' />
    <meta name='description' content={description ?? DEFAULT_DESCRIPTION} />
    <meta name='viewport' content='width=device-width' />
    <link rel='icon' type='image/svg+xml' href='/icono.svg' />
    <title>{title}</title>
  </head>
  <body>
    <Header />
    <slot />
    <Footer />
  </body>
</html>

<style is:global>
  :root {
    --cambridge-blue: #8fc0a9;
    --eggshell: #faf3dd;
    --tea-green: #c8d5b9;
    --verdigris: #68b0ab;
    --viridian: #4a7c59;
  }

  *,
  *::after,
  *::before {
    margin: 0;
    padding: 0;
    box-sizing: border-box;
    font-family:
      'Poppins',
      system-ui,
      -apple-system,
      BlinkMacSystemFont,
      'Segoe UI',
      Roboto,
      Oxygen,
      Ubuntu,
      Cantarell,
      'Open Sans',
      'Helvetica Neue',
      sans-serif;
  }

  html {
    scroll-behavior: smooth;
  }

  body {
    display: flex;
    flex-direction: column;
    justify-content: space-between;
    min-height: 100vh;
  }

  a {
    color: inherit;
    font-weight: bold;
    text-decoration: none;
  }

  li {
    list-style: none;
  }
</style>
